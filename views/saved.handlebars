<body>
    <div class="jumbotron banner nyt-text text-center ">
        <h1 class="display-4">NY Times</h1>
        <h4 classs="lead">Scrapen, Not Stirred...</h4>

    </div>
    <div class="container">
        <div id="wrapper">
            <button type="button" id="scrape-articles" class="btn btn-light btn-sm">Scrape Again</button>
            <button type="button" id="clear-scrape" class="btn btn-light btn-sm">Clear Old Scrape Results</button>
            <button type="button" id="load-articles" class="btn btn-light btn-sm">Load Articles</button>
            <button type="button" id="clear-articles" class="btn btn-light btn-sm">Clear Articles</button>
            <button type="button" id="saved-articles" class="btn btn-light btn-sm">Saved Articles</button>
            <button type="button" id="go-home" class="btn btn-light btn-sm">Home</button>
            <div id="article-list">
                {{#each Articles}}
                <div data-_id={{_id}} class="card">
                    <div class="card-header">
                        <h3>
                            <button class="btn btn-outline-secondary remove-article" data-id="{{_id}}">Remove
                                Article</button>
                            <button class="btn btn-outline-secondary write-note" data-id="{{_id}}">Write Note</button>
                            <a class="article-link scraped-title" target="_blank" rel="noopener noreferrer"
                                href={{link}}>{{headline}}</a>
                        </h3>
                        <p class="summary-text">{{summary}}</p>
                    </div>
                    <div id="note-input">
                        <h5 id="note-title">Note for {{headline}}</h5>
                        {{!-- <button type="button" class="close" data-dismiss="modal">Cancel</button> --}}
                    </div>
                    <div class="note-body">
                        <div class="form-group">
                            <input type="text" class="form-control" id="titleinput" placeholder="Title of your note"] required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="bodyinput" placeholder="Body of your note"
                                required>
                            <div class="invalid-feedback">
                                Please complete your note
                            </div>
                        </div>
                        <button id="save-note" type="submit" class="btn btn-secondary-outline btn"
                            data-id="{{_id}}">Save note</button>
                        </form>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</body>