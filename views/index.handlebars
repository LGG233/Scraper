<body>
    <div class="jumbotron banner nyt-text text-center ">
        <h1 class="display-4">NY Times</h1>
        <h4 classs="lead">Scrapen, Not Stirred...</h4>

    </div>
    <div class="container">
        <div id="wrapper">
            <button type="button" id="scrape-articles" class="btn btn-light btn-sm">Scrape Again</button>
            <button type="button" id="clear-scrape" class="btn btn-light btn-sm">Clear Old Scrape Results</button>
            <button type="button" id="load-articles" class="btn btn-light btn-sm">Load Articles</button>
            <button type="button" id="clear-articles" class="btn btn-light btn-sm">Clear Articles</button>
            <button type="button" id="saved-articles" class="btn btn-light btn-sm">Saved Articles</button>
            <button type="button" id="go-home" class="btn btn-light btn-sm">Home</button>
            <div id="article-list">
                {{#each Articles}}
                <div data-_id={{_id}} class="card">
                    <div class="card-header">
                        <h3>
                            <button class="btn btn-outline-secondary save-article" data-id="{{_id}}">Save
                                Article</button>
                            <a class="article-link scraped-title" target="_blank" rel="noopener noreferrer"
                                href={{link}}>{{headline}}</a>
                        </h3>
                        <p class="summary-text">{{summary}}</p>
                    </div>
                    {{!-- <div class="card-body">
                    </div> --}}
                </div>
                {{/each}}
            </div>
        </div>
        <div id="articles"></div>
        <div id="notes"></div>
    </div>
    
</body>